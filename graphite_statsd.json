{
  "AWSTemplateFormatVersion": "2010-09-09",
  "Description": "Create a basic Linux machine to run Graphite and StatSD",
  "Parameters": {
    "TagKeyName": {
      "Type": "String",
      "Default": "graphite",
      "MinLength": "1",
      "Description": "Tag instance with key name"
    },
    "SecurityGroups": {
      "Type": "CommaDelimitedList",
      "Default": "stormcloud, stormcloud-monitor",
      "Description": "Security group names separated by commas"
    },
    "KeyName": {
      "Type": "String",
      "Default": "namnguye",
      "MinLength": "1",
      "Description": "Name of an existing EC2 KeyPair to enable SSH access to the instance"
    },
    "InstanceType": {
      "Type": "String",
      "Default": "m1.xlarge",
      "AllowedValues": [
        "t1.micro",
        "m1.small",
        "m1.medium",
        "m1.large",
        "m1.xlarge",
        "m3.xlarge",
        "m3.2xlarge",
        "m2.xlarge",
        "m2.2xlarge",
        "m2.4xlarge"
      ],
      "Description": "t1.micro, m1.small, m1.medium, m1.large, m1.xlarge, m3.xlarge, m3.2xlarge, m2.xlarge, m2.2xlarge, m2.4xlarge"
    },
    "Region": {
      "Type": "String",
      "Default": "us-east-1",
      "AllowedValues": [
        "us-east-1",
        "us-west-1",
        "us-west-2",
        "eu-west-1",
        "ap-southeast-1",
        "ap-southeast-2",
        "ap-northeast-1",
        "sa-east-1"
      ],
      "Description": "us-east-1, us-west-1, us-west-2, eu-west-1, ap-southeast-1, ap-southeast-2, ap-northeast-1, sa-east-1"
    },
    "Login": {
      "Type": "String",
      "Default": "root",
      "MinLength": "1",
      "Description": "Login for super-user"
    },
    "Password": {
      "Type": "String",
      "Default": "root",
      "NoEcho": true,
      "MinLength": "1",
      "Description": "Password for super-user"
    },
    "Email": {
      "Type": "String",
      "Default": "root@localhost",
      "MinLength": "1",
      "Description": "Email for super-user"
    }
  },
  "Mappings": {
    "RegionMap": {
      "us-east-1": {
        "AMI": "ami-a73264ce"
      },
      "us-west-1": {
        "AMI": "ami-acf9cde9"
      },
      "us-west-2": {
        "AMI": "ami-6aad335a"
      },
      "eu-west-1": {
        "AMI": "ami-8e987ef9"
      },
      "ap-southeast-1": {
        "AMI": "ami-b84e04ea"
      },
      "ap-southeast-2": {
        "AMI": "ami-3d128f07"
      },
      "ap-northeast-1": {
        "AMI": "ami-3f32ac3e"
      },
      "sa-east-1": {
        "AMI": "ami-35258228"
      }
    }
  },
  "Resources": {
    "Ec2Instance": {
      "Type": "AWS::EC2::Instance",
      "Properties": {
        "KeyName": {
          "Ref": "KeyName"
        },
        "SecurityGroups": {
          "Ref": "SecurityGroups"
        },
        "ImageId": {
          "Fn::FindInMap": [
            "RegionMap",
            {
              "Ref": "Region"
            },
            "AMI"
          ]
        },
        "InstanceType": {
          "Ref": "InstanceType"
        },
        "UserData": {
          "Fn::Base64": {
            "Fn::Join": [
              "",
              [
                "#!/bin/bash",
                "\n",
                "sudo su -;",
                "apt-get update;",
                "apt-get install -y git;",
                "git clone https://github.com/gdbtek/setup-graphite.git /opt/setup-graphite;",
                "git clone https://github.com/gdbtek/setup-statsd.git /opt/setup-statsd;",
                "/opt/setup-graphite/ubuntu.bash -l 'root' -p 'foo' -e 'root@domain.com';",
                "/opt/setup-statsd/ubuntu.bash;"
              ]
            ]
          }
        }
      }
    }
  },
  "Outputs": {}
}